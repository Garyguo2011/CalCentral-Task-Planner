<div class="user_input">
<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :release %><br />
    <!-- [Jinge Gary]datetime picker -->
    <div class='input-group date' id='release_date'>
        <%= f.text_field :release, class: "form-control" %>
        <span class="input-group-addon" id="calendar_icon_release">
            <span class="glyphicon glyphicon-calendar"></span>
        </span>
    </div>
    <script type="text/javascript" id='calendar_js'>
        $(function () {
            $('#release_date').datetimepicker({format: 'YYYY-MM-DD HH:mm Z'});
        });
    </script>
    <!-- end [Jinge Gary] datetime picker -->
  </div>
  <div class="field">
    <%= f.label :due %><br />
    <!-- [Jinge Gary]datetime picker -->
    <div class='input-group date' id='due_date'>
        <%= f.text_field :due, class: "form-control" %>
        <span class="input-group-addon">
            <span class="glyphicon glyphicon-calendar" id='calendar_icon_due'></span>
        </span>
    </div>
    <script type="text/javascript">
        $(function () {
            $('#due_date').datetimepicker({format: 'YYYY-MM-DD HH:mm Z'});
        });
    </script>
    <!-- end [Jinge Gary] datetime picker -->
  </div>
  <div class="field">
    <%= f.label :status %><br />
    <%= f.select :status, options_for_select(["New", "Started", "Finished"])%>
  </div>
  <div class="field">
    <%= f.label :course %><br />
    <% if @task.course == nil %>
      <%= f.select(:course, @task.all_course)%>
    <% else %>
      <%= f.select(:course, @task.all_course)%>
    <% end %>
  </div>
  <div class="field">
    <%= f.label :kind %><br />
    <% if @task.kind == nil %>
       <%= f.select :kind, options_for_select([["Select One", ""], "Project", "Homework", "Paper", "Exam", "Other"])%>
    <% else %>
       <%= f.select :kind, options_for_select([[@task.kind, ""], "Project", "Homework", "Paper", "Exam", "Other"], @task.kind)%>
    <% end %>
  </div>
  <div class='field'>
    <label for='choosePrefill'>Need Prefill?</label>
    <select id='choosePrefill' name='needPrefill'>
      <option value='no'>No</option>
      <option value='yes'>Yes</option>
    </select>
  </div>
  <div class="field"></div>
  <script>
    $("#task_kind").change(function(){
      $(this).parent().next().next().empty();
      if ($( "#task_kind" ).val() == "Homework"){
        $(this).parent().next().next().append("<label for='HWProblems'>Number of Problems</label><select id='numProblems' name='numProb'><option value='1'>1</option><option value='1'>1</option><option value='2'>2</option><option value='3'>3</option><option value='4'>4</option><option value='5'>5</option><option value='6'>6</option><option value='7'>7</option><option value='8'>8</option><option value='9'>9</option><option value='10'>10</option><option value='11'>11</option><option value='12'>12</option><option value='13'>13</option><option value='14'>14</option><option value='15'>15</option><option value='16'>16</option><option value='17'>17</option><option value='18'>18</option><option value='19'>19</option><option value='20'>20</option><option value='21'>21</option><option value='22'>22</option><option value='23'>23</option><option value='24'>24</option><option value='25'>25</option></select>");
      }
    });
  </script>
  <div class="field">
    <%= f.label :rate %><br />
    <% if @task.rate == nil %>
       <%= f.select :rate, options_for_select([["Select One", ""], 1, 2, 3, 4, 5])%>
    <% else %>
       <%= f.select :rate, options_for_select([[@task.rate, ""], 1, 2, 3, 4, 5], @task.rate)%>
    <% end %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</div>