<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :due %><br />
    <%= f.datetime_select :due, start_year: 1900, end_year: 2100 %>
  </div>
  <div class="field">
    <%= f.label :status %><br />
    <% if @task.status == nil %>
      <%= f.select :status, options_for_select([["Select One", ""], "New", "Started", "Finished"])%>
    <% else %>
      <%= f.select :status, options_for_select([[@task.status, ""], "New", "Started", "Finished"], @task.status)%>
    <% end %>
  </div>
  <div class="field">
    <%= f.label :course %><br />
    <% if @task.course == nil %>
      <%= f.select(:course, @task.all_course)%>
    <% else %>
      <%= f.select(:course, @task.all_course)%>
    <% end %>
  </div>
  <div class="field">
    <%= f.label :kind %><br />
    <% if @task.kind == nil %>
       <%= f.select :kind, options_for_select([["Select One", ""], "Project", "Homework", "Paper", "Exam", "Other"])%>
    <% else %>
       <%= f.select :kind, options_for_select([[@task.kind, ""], "Project", "Homework", "Paper", "Exam", "Other"], @task.kind)%>
    <% end %>
  </div>
  <div class="field">
    <%= f.label :release %><br />
    <%= f.datetime_select :release, start_year: 1900, end_year: 2100 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

