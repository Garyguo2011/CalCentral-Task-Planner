-# in app/views/tasks/show.html.haml

%h2 Details about #{@task.title}

%ul#details
  %li
    Due Date:
    = @task.due.strftime("%B %d, %Y")
  %li
    Status:
    = @task.status

= link_to 'Edit', edit_task_path(@task)
= button_to 'Delete', task_path(@task), :method => :delete, :confirm => 'Are you sure?'
= link_to 'Back to task list', tasks_path
